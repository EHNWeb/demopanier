{% extends 'base.html.twig' %}

{% block title %}demoPanier{% endblock %}

{% block body %}

<h1 class="text-center my-3">Liste des produits</h1>

<div class="row">
    {% for product in tabProducts %}
        <div class="col-md-4">
            <div class="card mb-3" style="width: 18rem;">
                <h3 class="card-header">{{ product.title }}</h3>
                <img src="{{ product.image }}" alt="{{ product.title }}">
                <div class="card-body">
                    <p class="card-text text-end fw-bold">{{ product.price }}</p>
                </div>
                <div class="card-body text-end">
                    <a href="#" class="card-link btn btn-primary">Ajouter au panier <i class="fa-solid fa-cart-plus"></i></a>
                </div>
            </div>
        </div>        
    {% endfor %}
</div>

{% endblock %}
