<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}

		{# CDN Bootstrap#}
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous"> {% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
		<nav class="navbar navbar-expand-lg navbar-light bg-light">
			<div class="container-fluid">
				<a class="navbar-brand" href="#">demoPanier</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarNavAltMarkup">
					<div class="navbar-nav">
						<a class="nav-link active" aria-current="page" href="{{ path('app_product') }}">[ Liste des produits
							<i class="fa-solid fa-cart-arrow-down"></i>
							]</a>
						<a class="nav-link position-relative" href="{{ path('app_cart') }}">[ Panier
							<i class="fa-solid fa-cart-shopping"></i>
							]

							{# On recupère la variable de session totalQuantity #}
							{% set nbProducts = app.session.get('totalQuantity') %}

							{# On affiche la quantité sous forme de badge  #}
							{% if nbProducts > 0 %}
								<span class="position-absolute top-25 start-100 translate-middle badge rounded-pill bg-danger">{{ nbProducts }}</span>
							{% endif %}
						</a>


					</div>
				</div>
			</div>
		</nav>

		<div class="container"> {% block body %}{% endblock %}
			</div>
			{# Font Awesomw#}
			<script src="https://kit.fontawesome.com/032b0d3637.js" crossorigin="anonymous"></script>

			{# JS Bootstrap#}
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
		</body>
	</html>
